generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  image String?
  email String @unique
  city String?
  phoneNumber String?
  description String?
  resumeUuid String?
  projects Json[]
  // Introduce userTechnologyObject {isCertified{certifiedBy: adminId, certifiedAt}, technologyId}
  // userTechnos Json[]
  userTechnologies String[] @db.ObjectId
  appliesIds String[] @db.ObjectId
  emailVerified DateTime?
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  offers Offer[]
  // Not definitive
  technology Technologie @relation(fields: [userTechnologies], references: [id], onDelete: Cascade)

}

enum Role {
  USER
  ENTERPRISE
  ADMIN
  SUPERADMIN
}

model Offer {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  creatorId String   @db.ObjectId
  description String
  city String
  questions Json[]
  jobType String[]
  technologiesIds String[] @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apply Apply[]

  user User @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  technology Technologie @relation(fields: [technologiesIds], references: [id], onDelete: Cascade)

}

model Apply {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  candidateId String   @db.ObjectId
  enterpriseId String @db.ObjectId
  offerId String   @db.ObjectId
  answers Json[]
  candidateStatus String
  enterpriseStatus String
  offerTitle String
  technologiesIds String[]
  enterpriseName String
  candidateName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  offers Offer @relation(fields: [offerId], references: [id], onDelete: Cascade)
}


model Technologie {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  isValid Boolean @default(false)
  addedBy String? @db.ObjectId
  suggestedBy String? @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  categoryId String @db.ObjectId

  offers Offer[]
  users User[]
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Category {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  isValid Boolean @default(false)
  addedBy String? @db.ObjectId
  suggestedBy String? @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  technologies Technologie[]

}
// NextAuth Token 

model Account {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId             String   @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.String
  access_token       String?  @db.String
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.String
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String @unique
  userId String @db.ObjectId
  expires DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}